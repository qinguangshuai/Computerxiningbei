<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linerLayout_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/unit_tv"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="10dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/projectnum_tv"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <TextView
            android:id="@+id/yearplaninvest_tv"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:gravity="center"/>
        <TextView
            android:id="@+id/nowmonthinvest_tv"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:id="@+id/onetonowinvest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite" />
        <ImageView
            android:id="@+id/xiaogou"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/wancheng"
            android:visibility="invisible"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue4BA2E0"/>
</LinearLayout>