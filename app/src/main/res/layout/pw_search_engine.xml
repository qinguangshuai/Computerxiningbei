<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/yuanjiao_pop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/wheel_picker_address_cancel"
        android:padding="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/downward" />

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/wheel_picker_address_cancel"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="83dp"
            android:text="&#060;------------ 大通"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#70A6EE"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="83dp"
            android:text="西宁 ------------&#062;"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>
    <com.example.socket.custom.ChangFengMapsmall
        android:layout_below="@id/relative"
        android:id="@+id/changfengmapsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <com.example.socket.custom.BaiLiMapsmall
        android:layout_below="@id/relative"
        android:id="@+id/bailimapsmall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <com.example.socket.custom.XiNingBeiMapsmall
        android:layout_below="@id/relative"
        android:id="@+id/xiningbeimapsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"

       />

    <ImageView
        android:id="@+id/enlarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/enlarge" />
</RelativeLayout>